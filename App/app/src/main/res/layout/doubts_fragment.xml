<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#006eff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ListView
        android:id="@+id/doubts_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:footerDividersEnabled="false"
        />

    <ImageView
        android:id="@+id/compose_button"
        android:background="@drawable/compose_background"
        android:contentDescription="@string/compose_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_margin"
        android:src="@drawable/compose_icon"
        android:scaleType="fitCenter"
        />

</FrameLayout>